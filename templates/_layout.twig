        <link rel="stylesheet" href="/css/site.css?v={{ resourceVersion }}">

        {% block head %}{% endblock %}

    </head>

    <body {% if entry is defined %}id="{{ entry.slug }}"{% endif %}>

       {#  <!-- Google Tag Manager (noscript) -->
