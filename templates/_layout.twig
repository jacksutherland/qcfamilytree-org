{% set resourceVersion = "1.1" %}

<!DOCTYPE html>
<html lang="en">

    <head>
        <meta name="robots" content="noindex, nofollow">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> 

        {# SEO and Social Meta Data #}

       {#  {% set pageTitle = defaultSeo.seoTitle ~ ' ' ~ defaultSeo.seoTitleSuffix %}
        {% set socialTitle = defaultSeo.seoTitle %}
        {% set pageDescription = '' %}
        {% set socialImage = '' %}
        {% set canonicalUrl = '' %}

        {% if entry %}
            {% if entry.seoTitle and entry.seoTitle | length %}
                {% set pageTitle = entry.seoTitle ~ ' ' ~ defaultSeo.seoTitleSuffix %}
                {% set socialTitle = entry.seoTitle %}
            {% else %}
                {% set pageTitle = entry.title ~ ' ' ~ defaultSeo.seoTitleSuffix %}
                {% set socialTitle = entry.title %}
            {% endif %}
            {% if entry.seoDescription and entry.seoDescription | length %}
                {% set pageDescription = entry.seoDescription %}
            {% endif %}
            {% if entry.canonicalUrl and entry.canonicalUrl | length %}
                {% set canonicalUrl = entry.canonicalUrl %}
            {% endif %}
            {% if entry.heroBackgroundImage and entry.heroBackgroundImage.count %}
                {% set socialImage = entry.heroBackgroundImage.one().url %}
            {% elseif entry.productImage and entry.productImage.count %}
                {% set socialImage = entry.productImage.one().url %}
            {% elseif entry.solutionImage and entry.solutionImage.count %}
                {% set socialImage = entry.solutionImage.one().url %}
            {% elseif entry.industryImage and entry.industryImage.count %}
                {% set socialImage = entry.industryImage.one().url %}
            {% endif %}
        {% endif %}

        <title>{{ pageTitle }}</title>
        {% if pageDescription | length %}
            <meta name="description" content="{{ pageDescription }}">
        {% endif %}
        {% if canonicalUrl | length %}
            <link rel="canonical" href="{{ canonicalUrl }}" />
        {% endif %}

        <meta property="og:title" content="{{ socialTitle }}">
        <meta property="og:description" content="{{ pageDescription }}">
        <meta property="og:url" content="{% if canonicalUrl | length %}{{ canonicalUrl }}{% else %}{{ craft.request.url }}{% endif %}">
        {% if socialImage | length %}
            <meta property="og:image" content="{{ socialImage }}">
        {% endif %}

        <meta name="twitter:card" content="summary" />
        <meta name="twitter:title" content="{{ socialTitle }} ">
        <meta name="twitter:description" content="{{ pageDescription }}">
        {% if socialImage | length %}
            <meta name="twitter:image" content="{{ socialImage }}">
        {% endif %}

