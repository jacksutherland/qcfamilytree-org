<div class="hero{% if entry.slug == 'homepage' %} large-hero{% elseif entry.heroImage is not defined or entry.heroImage.count == 0 %} small-hero{% endif %}"{% if entry.heroImage is defined and entry.heroImage.count %} style="background-image: url({{ entry.heroImage.one().url }});"{% endif %}>
    <div class="hero-content-container">
        <div class="hero-content">
            {% if entry.slug == 'homepage' %}
                <div class="hero-tree">
                    <img alt="Family Tree" src="/images/logo-fullcolor-white-tag.png">
                </div>
            {% endif %}
            <div class="hero-text">
                <h1>
                    {% if entry.heroHeader | length %}
                        {{ entry.heroHeader }}
                    {% else %}
                        {{ entry.title }}
                    {% endif %}
                    {% if entry.heroSubtitle | length %}
                        <span class="subheader">{{ entry.heroSubtitle }}</span>
                    {% endif %}
                </h1>
                {% if entry.heroButtonText | length and entry.heroButtonEntry.count %}
                    <div class="hero-cta">
                        <div>
                            <a href="{{ entry.heroButtonEntry.one().url }}" class="btn">{{ entry.heroButtonText }}</a>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="hero-cover"></div>
</div>